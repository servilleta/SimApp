# =============================================================================
# MONTE CARLO SIMULATION PLATFORM - ENVIRONMENT CONFIGURATION TEMPLATE
# =============================================================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to git - it contains sensitive information

# =============================================================================
# SECURITY SETTINGS (CRITICAL - CHANGE THESE!)
# =============================================================================

# JWT Secret Key - MUST be changed in production!
# Generate with: openssl rand -hex 32
SECRET_KEY=your-secret-key-needs-to-be-changed-in-env

# Admin user credentials for demo/initial setup
ADMIN_EMAIL=admin@montecarlo.local  
ADMIN_PASSWORD=change-me-in-production
ADMIN_USERNAME=admin

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Database URL - SQLite for development, Postgres for production
DATABASE_URL=sqlite:///./montecarlo_app.db
# DATABASE_URL=postgresql://username:password@localhost:5432/montecarlo_db

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Debug mode - set to false in production
DEBUG=false

# API settings
API_PREFIX=/api

# CORS settings - restrict in production
CORS_ORIGINS=*

# =============================================================================
# FILE UPLOAD SETTINGS
# =============================================================================

# Upload directory and size limits
UPLOAD_DIR=uploads
MAX_UPLOAD_SIZE=524288000  # 500MB in bytes

# Excel processing limits  
MAX_EXCEL_CELLS=1000000
CHUNK_SIZE_CELLS=100000
STREAMING_THRESHOLD=50000

# =============================================================================
# SIMULATION SETTINGS
# =============================================================================

# Default simulation parameters
DEFAULT_ITERATIONS=1000
MAX_ITERATIONS=1000000

# GPU settings
USE_GPU=true
GPU_MEMORY_FRACTION=0.6
MAX_CPU_FALLBACK_TASKS=4
GPU_MEMORY_PER_TASK_MB=2048

# =============================================================================
# PAYMENT INTEGRATION (OPTIONAL)
# =============================================================================

# Stripe settings for Pro accounts
# STRIPE_PUBLISHABLE_KEY=pk_test_...
# STRIPE_SECRET_KEY=sk_test_...
# STRIPE_WEBHOOK_SECRET=whsec_...

# =============================================================================
# MONITORING & LOGGING
# =============================================================================

# Logging level
LOG_LEVEL=INFO

# =============================================================================
# REDIS/CACHE SETTINGS (for progress tracking)
# =============================================================================

# Redis URL for progress storage
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# DEPLOYMENT SETTINGS
# =============================================================================

# Host and port settings
HOST=0.0.0.0
PORT=8000

# Environment name
ENVIRONMENT=development

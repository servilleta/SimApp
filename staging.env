# Monte Carlo Platform - Staging Environment
ENVIRONMENT=staging
DEBUG=false
LOG_LEVEL=INFO

# Staging URLs
STAGING_API_URL=https://staging-api.simapp.ai
STAGING_DOMAIN=staging.simapp.ai

# Security
STAGING_SECRET_KEY=staging-secret-key-32-chars-change-me
STAGING_CORS_ORIGINS=https://staging.simapp.ai,http://localhost:8080
STAGING_TRUSTED_HOSTS=staging.simapp.ai,localhost

# Database - Staging
STAGING_POSTGRES_DB=montecarlo_staging
STAGING_POSTGRES_USER=montecarlo_staging
STAGING_POSTGRES_PASSWORD=staging_db_password_123

# Admin User - Staging
STAGING_ADMIN_EMAIL=admin@staging.simapp.ai
STAGING_ADMIN_USERNAME=staging_admin
STAGING_ADMIN_PASSWORD=StagingAdmin123!

# Monitoring - Staging
STAGING_GRAFANA_PASSWORD=staging-grafana-pass

# Performance Settings (Lower than Production)
WORKER_COUNT=2
MAX_CONNECTIONS=500
RATE_LIMIT_REQUESTS=50
RATE_LIMIT_WINDOW=60

# File Management
FILE_RETENTION_DAYS=7
CLEANUP_INTERVAL_HOURS=6
MAX_FILE_SIZE=500MB

# GPU Settings
USE_GPU=true
GPU_MEMORY_FRACTION=0.6

# Simulation Settings
DEFAULT_ITERATIONS=1000
MAX_ITERATIONS=1000000

# Auth0 Staging (if different from production)
# AUTH0_DOMAIN=staging-auth.auth0.com
# AUTH0_CLIENT_ID=staging_client_id
# AUTH0_CLIENT_SECRET=staging_client_secret

# Stripe Testing (use test keys)
STRIPE_PUBLISHABLE_KEY=pk_test_staging_key
STRIPE_SECRET_KEY=sk_test_staging_key

# Email Settings (staging)
SMTP_HOST=smtp.mailtrap.io
SMTP_PORT=587
SMTP_USER=staging_smtp_user
SMTP_PASSWORD=staging_smtp_pass
EMAIL_FROM=noreply@staging.simapp.ai

# Features flags for staging
FORECASTING_ENABLED=true
BIG_ENGINE_ENABLED=true
POWER_ENGINE_ENABLED=true
